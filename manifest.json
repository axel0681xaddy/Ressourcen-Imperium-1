    "related_applications": [],

    "features": [
        "Cross Platform",
        "Offline Support",
        "Push Notifications",
        "Background Sync",
        "Installable"
    ],

    "share_target": {
        "action": "/share-target/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "saves",
                    "accept": ["application/json"]
                }
            ]
        }
    },

    "file_handlers": [
        {
            "action": "/open-save/",
            "accept": {
                "application/json": [".save"]
            },
            "icons": [
                {
                    "src": "assets/icons/save-file.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ],
            "launch_type": "single-client"
        }
    ],

    "protocol_handlers": [
        {
            "protocol": "web+gamestate",
            "url": "/load?data=%s"
        }
    ],

    "display_override": [
        "standalone",
        "minimal-ui",
        "browser"
    ],

    "edge_side_panel": {
        "preferred_width": 400
    },

    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },

    "id": "ressourcen-imperium-v1",
    "version": "1.0.0",
    "update_url": "https://example.com/api/updates/check"
}
